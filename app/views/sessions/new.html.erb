<div class="min-h-screen flex flex-col justify-center p-4">
  <div class="mx-auto w-full md:max-w-md">
    <% if alert %>
      <p class="bg-red-100 border-red-500 text-red-700 p-2 mb-2"><%= alert %></p>
    <% end %>
    <div class="bg-white shadow w-full rounded-lg">
      <div class="px-5 py-7">
        <h2 class="text-center text-2xl font-bold mb-4">ユーザーログイン</h2>
        <%= form_with url: create_sessions_path, local: true, method: :post, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :email, "Eメール", class: "font-bold block" %>
            <%= f.email_field :email, class: "w-full py-2 border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :password, "パスワード", class: "font-bold block" %>
            <%= f.password_field :password, class: "w-full py-2 border-gray-300 rounded-md" %>
          </div>
          <%= f.submit "ログイン", class: "w-full bg-blue-500 text-white rounded py-2 px-4 hover:bg-blue-600" %>
        <% end %>
      </div>
    </div>
    <div class="flex justify-center my-4">
      <%= link_to "HOME", root_path, class: "text-xl text-white bg-yellow-500 hover:bg-yellow-600 font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
