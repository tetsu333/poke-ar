<div class="flex flex-col items-center justify-center h-screen">
  <h1 class="text-6xl font-bold text-blue-500 mb-4">ポケAR</h1>
  <p class="mb-4">スマホ用サイト</p>
  <div>
    <% if @user.nil? %>
      <div class="flex justify-center my-4">
        <%= link_to "新規登録", new_user_path, class: "text-xl text-white bg-red-500 hover:bg-red-600 font-bold py-2 px-4 rounded" %>
      </div>
      <div class="flex justify-center my-4">
        <%= link_to "ログイン", new_sessions_path, method: :get, class: "text-xl text-white bg-green-500 hover:bg-green-600 font-bold py-2 px-4 rounded" %>
      </div>
    <% else %>
      <div class="flex justify-center my-4">
        <%= link_to "一覧画面へ", pokemons_path, class: "text-xl text-white bg-green-500 hover:bg-green-600 font-bold py-2 px-4 rounded" %>
      </div>
      <div class="flex justify-center my-4">
        <%= link_to "ログアウト", destroy_sessions_path, data: { turbo_method: "delete" }, class: "text-xl text-white bg-red-500 hover:bg-red-600 font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
