<div class="min-h-screen flex flex-col justify-center p-4">
  <div class="mx-auto w-full md:max-w-md">
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-2 rounded relative" role="alert">
        <strong class="font-bold">エラーが発生しました：</strong>
        <span class="block sm:inline"><%= @user.errors.full_messages.uniq.to_sentence %></span>
      </div>
    <% end %>
    <div class="bg-white shadow w-full rounded-lg">
      <div class="px-5 py-7">
        <h2 class="text-center text-2xl font-bold mb-4">ユーザー作成</h2>
        <%= form_with model: @user, local: true, method: :post, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :name, "名前", class: "font-bold block" %>
            <%= f.text_field :name, class: "w-full py-2 border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :email, "Eメール", class: "font-bold block" %>
            <%= f.email_field :email, class: "w-full py-2 border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :password, "パスワード", class: "font-bold block" %>
            <%= f.password_field :password, class: "w-full py-2 border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :password_confirmation, "パスワード確認", class: "font-bold block" %>
            <%= f.password_field :password_confirmation, class: "w-full py-2 border-gray-300 rounded-md" %>
          </div>
          <%= f.submit "作成", class: "w-full bg-blue-500 text-white rounded py-2 px-4 hover:bg-blue-600" %>
        <% end %>
      </div>
    </div>
    <div class="flex justify-center my-4">
      <%= link_to "ホーム", root_path, class: "text-xl text-white bg-yellow-500 hover:bg-yellow-600 font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
