<div class="flex flex-col items-center justify-center min-h-screen p-4">
  <h1 class="text-3xl font-bold text-gray-700 mb-6">新しいポケモンを登録</h1>
  
  <%= form_with(model: @pokemon) do |form| %>
    <div class="flex justify-center w-full max-w-xs">
      <%= form.label :pokedex_number, "図鑑番号", class: "block text-lg font-bold text-gray-700 mb-2" %>
    </div>
    <div class="flex justify-center w-full max-w-xs">
      <%= form.number_field :pokedex_number, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm", required: true %>
    </div>
    
    <div class="mt-6">
      <%= form.submit "実行", data: { disable: true }, class: "w-full max-w-xs text-lg text-white bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded transition duration-300" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "戻る", pokemons_path, class: "w-full max-w-xs text-lg text-white bg-gray-500 hover:bg-gray-700 font-bold py-2 px-4 rounded transition duration-300" %>
  </div>
</div>
